<div class="p-mv js-slide">
  <div class="p-mv__list js-slide-list">
    <div class="p-mv__container">
      <% for (var i = 1; i <= 5; i++) { %>
      <div class="p-mv__item">
        <a href="<%= host %>/items/?id=<%= i%>">
          <img src="<%= host %>/src/assets/images/item-<%= i%>.jpg" alt="スライド<%= i%>">
        </a>
      </div>
      <% } %>
    </div>
    <!-- /.p-mv__container -->
  </div>
  <!-- /.p-mv__list -->
  <button class="p-mv__button prev u-svg js-slide-prev" type="button">
    <span class="icon u-svg">
      <svg class="button__svg" viewBox="0 0 532 532">
