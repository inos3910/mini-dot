        <select name="select" id="valiationSelect" data-display-stock="1">
          <option value="122741843" data-index="0" data-stock="33" selected="">サイズS</option>
          <option value="122741844" data-index="1" data-stock="1">サイズM</option>
          <option value="212797370" data-stock="0">在庫なし:サイズL</option>
        </select>
      </div>
      
      <div id="amountSelectWrap" class="purchaseElement">
