    </div>
    <!-- /.l-footer__unit -->
    <div class="l-footer__unit newsletter">
      <div class="l-footer__caption">NEWSLETTER</div>
      <div class="c-newsletter">
        <div class="c-newsletter__description u-preline">最新情報をいち早くメールでお届けします。</div>
        <%- include(`${root}/src/partials/base/_newsletter.ejs`, {page: page}) %>
      </div>
      <!-- /.c-newsletter -->
    </div>
    <!-- /.l-footer__unit -->
  </div>
  <!-- /.l-footer__inner -->
  <div class="l-footer__bottom u-frame--wide">
    <div class="l-footer__sns c-sns">
      <%- include(`${root}/src/partials/_sns.ejs`, {page: page}) %>
      <%- include(`${root}/src/partials/base/_BASEMenuTag.ejs`, {page: page}) %>
    </div>
    <!-- /.l-footer__sns -->
    <div class="l-footer__translation c-translation">
      <%- include(`${root}/src/partials/base/_translation.ejs`, {page: page}) %>
    </div>
