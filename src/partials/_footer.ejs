      </div>
      <!-- /.l-footer__category -->
    </div>
    <!-- /.l-footer__unit -->
    <div class="l-footer__unit menu">
      <div class="l-footer__caption">MENU</div>
      <ul class="l-footer__list">
        <li><a href="<%= host %>">HOME</a></li>
        <li><a href="<%= host %>/about/">ABOUT</a></li>
        <li><a href="<%= host %>/blog/">BLOG</a></li>
        <li><a href="<%= host %>/community/">COMMUNITY</a></li>
        <li><a href="<%= host %>/membership/">MEMBERSHIP</a></li>
        <li><a href="<%= host %>/contact/">CONTACT</a></li>
