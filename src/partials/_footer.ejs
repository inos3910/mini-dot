      </ul>
      <!-- /.l-footer__list -->
    </div>
    <!-- /.l-footer__unit -->
    <div class="l-footer__unit payment">
      <div class="l-footer__caption">PAYMENTS</div>
      <div class="c-payment">
        <ul class="c-payment__list">
          <li class="c-payment__item">クレジットカード決済</li>
          <li class="c-payment__item">あと払い（Pay ID）</li>
